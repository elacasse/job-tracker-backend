# Pull public/ from the app image
FROM ericlacasse/job-tracker-app:prod AS app

FROM nginx:alpine

# Nginx vhost
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Only needs public/ so try_files + index.php exist in nginx container
COPY --from=app /var/www/html/public /var/www/html/public

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
